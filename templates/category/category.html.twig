{% extends 'base.html.twig' %}

{% block title %}First Category Form{% endblock %}

{% block header %}
    <div class="container">
        <div class="row categoryTitle">
            <div class="col-sm-12">
                <h1>First Category Form</h1>
            </div>
        </div>
    </div>

    <br />
    <br />
{% endblock header %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-sm-10">
                {{ form_start(categoryForm) }}
                {{ form_widget(categoryForm) }}

                <div class="form-group row">
                    <div class="col-sm-10">
                        <input type="submit" value="Save" class="btn btn-success">
                    </div>
                </div>

                {{ form_end(categoryForm) }}
            </div>
        </div>
    </div>

{% endblock %}

